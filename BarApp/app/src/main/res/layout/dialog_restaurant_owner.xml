<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="What do you want to do with this restaurant?"/>
    <Button
        android:id="@+id/btn_restaurant_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_edit_24"
        android:onClick="runEditRestaurant"/>
    <Button
        android:id="@+id/btn_restaurant_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:background="@drawable/ic_delete_24"
        android:onClick="runDeleteRestaurant"/>

</LinearLayout>